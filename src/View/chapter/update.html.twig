{% extends 'templates/layout.html.twig' %}

{% block title %}{{ parent() }} - Gestion des chapitres{% endblock %}

{% block container %}
  <div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <h1>Modifier un chapitre</h1>
        </div>
        <form method="post">
            <div class="form-group">
                <label>Titre du chapitre :</label>
                <input type="text" class="form-control" required name="title" value="{{ chapter.title }}"/>
            </div>
            <div class="form-group">
                <label>Contenu du chapitre :</label>
                <textarea class="form-control" required name="content" value="{{ chapter.content }}">{{ chapter.content }}</textarea>
            </div>
            <button type="submit" class="btn btn-block btn-success">Valider</button>
        </form>
    </div>
  </div>
{% endblock %}
