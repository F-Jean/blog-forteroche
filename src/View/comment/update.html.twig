{% extends 'templates/layout.html.twig' %}

{% block title %}{{ parent() }} - Gestion des commentaires{% endblock %}

{% block container %}
  <div class="container-fluid">
    <div class="col-md-6 col-md-offset-3">
        <div class="jumbotron">
            <h1>Modifier un commentaire</h1>
        </div>
        <form method="post">
            <div class="form-group">
                <label>Pseudo :</label>
                <input type="text" class="form-control" required name="pseudo" value="{{ comment.pseudo }}"/>
            </div>
            <div class="form-group">
                <label>Contenu du commentaire :</label>
                <textarea class="form-control" required name="editor1" value="{{ comment.content }}">{{ comment.content|raw }}</textarea>
            </div>
            <button type="submit" class="btn btn-block btn-success">Valider</button>
            <!-- CKEditor -->
            <script src="/ressources/ckeditor/ckeditor.js"></script>
            <script>CKEDITOR.replace('editor1');</script>
        </form>
    </div>
  </div>
{% endblock %}
