{% extends 'templates/layout.html.twig' %}

{% block container %}
  <div class="col-md-10 col-md-offset-1">
      <div class="jumbotron">
          <h1>Commentaires</h1>
      </div>
      <form method="post">
          <div class="form-group">
              <label>Pseudo :</label>
              <input type="text" class="form-control" required name="pseudo"/>
          </div>
          <label>Votre message :</label>
          <textarea rows="4" cols="50" name="content"></textarea>
          <button type="submit" class="btn btn-block btn-success">Envoyer</button>
      </form>
  </div>
{% endblock %}
